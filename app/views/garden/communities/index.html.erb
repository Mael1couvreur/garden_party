<div class="top-page-header-community">
  <%= link_to communities_classement_path do %>
    <i class="fas fa-medal link-to-classement"></i>
  <% end %>
  <h1>Community</h1>
  <%= cl_image_tag current_user.photo.key, class: "avatar-bordered avatar-top-right" %>
</div>

<div class="container-plants-cards">
  <% @plants.each do |plant| %>
    <div id ="content-user-plants" class="card-deck flex-row flex-nowrap">
      <%= cl_image_tag plant.user.photo.key, class: "avatar-bordered community-avatar" %>
      <a href="/plants/<%= plant.id %>">
      <div class="img-info-user-plant">
        <%= cl_image_tag plant.photo.key, crop: :fill, id:"photo-user-plant" %>
        <div class="info-user-plant">
          <li id="nickname-list-user-plant"><%= plant.nickname %></li>
          <%creation_date = plant.created_at %>
          <% calcul_date = @now - creation_date  %>
          <% age_plant = calcul_date / 86400 %>
          <div class="plant-age">
            <% age_plant_final = plant.age_in_days.to_i %>
            <% if age_plant_final == 0 %>
                Nouvelle pousse
            <% elsif age_plant_final > 1 %>
                <%= age_plant_final %> jours
            <% else %>
                <%= age_plant_final %> jour
            <% end %>
          </div>
        </div>
      </div>
      </a>
    </div>
  <% end %>
</div>
