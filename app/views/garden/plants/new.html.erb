<div class="top-new-plant">
  <%= link_to plants_path do %>
    <i class="fas fa-angle-left bouton-back"></i>
  <% end %>
  <h1 id="title-form-new-plant">Ma plante</h1>
</div>

<div class="container mt-5">
  <div class="form-new-plant">
      <%= simple_form_for [ @plant ] do |f| %>
          <label id="photo-new-plant", class="border p-5">
          <i id="icone-add-photo", class="fas fa-seedling fa-2x navbar-icon"></i>
          <i id="icone-app-photo" class="fas fa-camera"></i>
              <div class="d-none">
                  <%= f.input :photo, as: :file, label: false %>
              </div>
          </label>
          <div class="infos-form-plant-new">
              <%= f.input :nickname, label: false, placeholder: "Surnom", input_html: { class: 'champ-form' } %>
              <%= f.input :plant_information, collection: @plant_infos , prompt: "Select you type of plant" %>
              <%= f.input :age_in_days, as: :date, html5: true%>
          </div>
          <%= f.submit "CrÃ©er ma plante", id:"btn-form-new-plant" %>
      <% end %>
  </div>
</div>
